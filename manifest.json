{
  "manifest_version": 3,
  "name": "Dynamic Wallpaper Hub",
  "version": "1.0",
  "description": "Transform your new tab with random wallpapers, GIFs, and productivity features",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Wallpaper Settings"
  },
  "icons": {
    "16": "icons/icons16.png",
    "48": "icons/icons48.png",
    "128": "icons/icons128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}